    <style name="NoticeText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/noticePrimaryColor</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawableLeft">@drawable/ic_event_note_notice_dark_12dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="RoundOpequeButton">
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundTransparentButton">
        <item name="android:background">@drawable/round_transparent_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


